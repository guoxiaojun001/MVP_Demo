<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gxj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <mvp.gxj.com.circleview.view.CircleView
        android:id="@+id/circle1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        gxj:circleWidth="15dp"
        gxj:firstColor="@android:color/holo_blue_bright"
        gxj:secondColor="@android:color/black"
        gxj:bottomTextColor="@android:color/background_dark"
        gxj:bottomTextSize="15sp"
        gxj:bottomTextContent="xiaobai"
        gxj:centerTextColor="@android:color/holo_red_dark"
        gxj:centerTextSize="15sp"
        gxj:centerTextContent="nba"
        gxj:speed="20"
        />

    <mvp.gxj.com.circleview.view.CircleView
        android:id="@+id/circle2"
        android:layout_below="@+id/circle1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        gxj:circleWidth="15dp"
        android:layout_centerInParent="true"
        gxj:firstColor="@android:color/transparent"
        gxj:secondColor="@android:color/holo_blue_light"
        gxj:bottomTextColor="@android:color/background_dark"
        gxj:bottomTextSize="20sp"
        gxj:bottomTextContent="xiaobai"
        gxj:centerTextColor="@android:color/holo_green_dark"
        gxj:centerTextSize="30sp"
        gxj:centerTextContent="xiaobai"
        gxj:speed="10"
        />


    <Button
        android:id="@+id/go_second"
        android:layout_below="@id/circle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到第二页"/>

    <Button
        android:id="@+id/go_third"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/circle2"
        android:layout_toRightOf="@id/go_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转到第3页"/>


    <Button
        android:id="@+id/go_other"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/go_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络图片"/>

    <Button
        android:id="@+id/go_wave"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/go_third"
        android:layout_toRightOf="@id/go_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="波浪view"/>
</RelativeLayout>
